package com.etc5.snake;

import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.util.Random;

/**
 * @author tangzhen
 * @version 1.0
 * @date 2023/12/12 14:08
 */
public class GamePanel extends JPanel implements KeyListener, ActionListener {
    //è›‡çš„å±æ€§ğŸ
    int length;
    int[] snakeX = new int[600];
    int[] snakeY = new int[600];
    String fx;//åˆå§‹åŒ–æ—¶è›‡å¤´æ–¹å‘
    //é£Ÿç‰©
    int foodX;
    int foodY;
    Random random = new Random();
    //å½“å‰æ¸¸æˆçŠ¶æ€
    boolean isStart = false;//æ˜¯å¦æ­£åœ¨è¿è¡Œ
    boolean isDead = false;//æ˜¯å¦å¤±è´¥
    int score;//æˆç»©
    //äº‹ä»¶é—´éš”å™¨
    Timer timer = new Timer(100,this);//è®¾å®šå½“å‰é¢æ¿ æ‰§è¡Œé—´éš”ä¸º100msä¸€æ¬¡
    public GamePanel(){
        init();
        //åŠ è½½ç›‘å¬äº‹ä»¶

        this.setFocusable(true);
        this.addKeyListener(this);

        //å¯åŠ¨æ¸¸æˆ
        timer.start();
    }
    //æ¸¸æˆåˆå§‹åŒ–å‡½æ•°
    public void init(){
        //åˆå§‹åŒ–è›‡
        length=5;//åˆå§‹é•¿åº¦ä¸º5
        snakeX[0] = 150; snakeY[0] = 150;
        snakeX[1] = 125; snakeY[1] = 150;
        snakeX[2] = 100; snakeY[2] = 150;
        snakeX[3] = 75; snakeY[3] = 150;
        snakeX[4] = 50; snakeY[4] = 150;
        fx="R";
        //åˆå§‹åŒ–é£Ÿç‰©ç‚¹
        foodX = 25*(random.nextInt(750/25));
        foodY = 25*(random.nextInt(600/25));
    }
    //ç»˜å›¾

    @Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);//æ¸…å±
        //ç»˜åˆ¶é™æ€é¢æ¿
        setBackground(new Color(70,70,70));

//        GameData.leftImg.paintIcon(this,g,25,11);

        //ç”»æˆç»©
        g.setColor(Color.BLACK);
        g.setFont(new Font("æ¥·ä½“",Font.BOLD,30));
        g.drawString("é•¿åº¦:"+length,500,50);
        g.drawString("åˆ†æ•°:"+score,700,50);

        //æ¸¸æˆä¸»ä½“ç•Œé¢
        g.setColor(Color.GRAY);
        g.fillRect(25,75,850,600); //ç»˜åˆ¶å¡«å……çŸ©å½¢

        //ç»˜åˆ¶è›‡ğŸ
        if("R".equals(fx)){
            GameData.rightImg.paintIcon(this,g,snakeX[0],snakeY[0]);
        }else if("L".equals(fx)){
            GameData.leftImg.paintIcon(this,g,snakeX[0],snakeY[0]);
        }else if("U".equals(fx)){
            GameData.upImg.paintIcon(this,g,snakeX[0],snakeY[0]);
        }else{
            GameData.downImg.paintIcon(this,g,snakeX[0],snakeY[0]);
        }
        for(int i=1;i<length;i++){
            GameData.bodyImg.paintIcon(this,g,snakeX[i],snakeY[i]);
        }

        //ç”»é£Ÿç‰©
        GameData.foodImg.paintIcon(this,g,foodX,foodY);

        //æ¸¸æˆçŠ¶æ€ä¸åŒï¼Œæ¸¸æˆæ ¸å¿ƒé¡µé¢æ˜¾ç¤ºæ–‡å­—ä¸åŒ
        if(isStart){
            g.setColor(Color.WHITE);
            g.setFont(new Font("æ¥·ä½“",Font.BOLD,30));
            g.drawString("æŒ‰ä¸‹ç©ºæ ¼å¼€å§‹æ¸¸æˆ",300,300);
        }
        if(isDead){
            g.setColor(Color.red);
            g.setFont(new Font("æ¥·ä½“",Font.BOLD,30));
            g.drawString("æ¸¸æˆå¤±è´¥,æŒ‰ä¸‹ç©ºæ ¼å¼€å§‹æ¸¸æˆ",300,300);
        }
    }


    //é”®ç›˜äº‹ä»¶ç›‘å¬

    //è‡ªå®šä¹‰äº‹ä»¶ç›‘å¬

    @Override
    public void keyTyped(KeyEvent e) {

    }

    @Override
    public void keyPressed(KeyEvent e) {
        int keyCode = e.getKeyCode();
        if(keyCode == KeyEvent.VK_SPACE){
            if(isDead){
                isDead = false;
                init();
            }else {
                isStart = !isStart;
            }
            repaint();
        }
        //è›‡çš„æ–¹å‘
        if(keyCode == KeyEvent.VK_UP){
            fx="U";
        }else if(keyCode == KeyEvent.VK_DOWN){
            fx="D";
        } else if (keyCode == KeyEvent.VK_LEFT) {
            fx="L";
        } else if (keyCode == KeyEvent.VK_RIGHT) {
            fx="R";
        }

    }

    @Override
    public void keyReleased(KeyEvent e) {

    }

    @Override
    public void actionPerformed(ActionEvent e) {
        if(isStart && !isDead){
            //åƒé£Ÿç‰©
            if(snakeX[0] == foodX && snakeY[0] == foodY){
                length++;
                score+=100;
                //é‡ç½®é£Ÿç‰©
                foodX = 25*(random.nextInt(850/25)+1);
                foodY = 25*(random.nextInt(850/25)+1);
            }
            //è›‡çš„ç§»åŠ¨
            //èº«ä½“ç§»åŠ¨
            for(int i=length-1;i>0;i--){
                snakeX[i]=snakeX[i-1];
                snakeY[i]=snakeY[i-1];
            }
            //å¤´éƒ¨ç§»åŠ¨
            if("R".equals(fx)){
                snakeX[0] += 25;
                if(snakeX[0]>850){
                    snakeX[0] = 25;
                }
            }else if("L".equals(fx)){
                snakeX[0] -= 25;
                if(snakeX[0]<25){
                    snakeX[0] = 850;
                }
            }else if("U".equals(fx)){
                snakeY[0] -= 25;
                if(snakeY[0]<75){
                    snakeY[0] = 650;
                }
            }else{
                snakeY[0] += 25;
                if(snakeY[0]>650){
                    snakeY[0] = 75;
                }
            }

            //å¤±è´¥çš„åˆ¤æ–­ï¼Œæ’åˆ°è‡ªå·±
            for(int i=1;i<length;i++){
                if(snakeX[0] == snakeX[i] && snakeY[0] == snakeY[i]){
                    isDead = true;
                }
            }

            //ä½¿ç”¨æ—¶é—´é—´éš”å™¨ï¼Œè®©ä»¥ä¸Šä»£ç æ¯100msæ‰§è¡Œä¸€æ¬¡
            repaint();
        }
        timer.start();
    }
}